<UserControl x:Class="SarasaviLite.UserControls.infoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SarasaviLite.UserControls">
    <Border Margin="10 0" Style="{StaticResource WhiteBorder}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=infoCard,Path=Image}" Width="30" Margin="0 0 10 0"/>
                <TextBlock Text="{Binding ElementName=infoCard,Path=Title}" Style="{StaticResource TitleText}"/>
            </StackPanel>
            <TextBlock Text="{Binding ElementName=infoCard,Path=SubTitle}" Style="{StaticResource secondaryText}" />

            <Slider Style="{DynamicResource SliderStyle1}" x:Name="slider" Margin="0 5 0 0" IsSnapToTickEnabled="True" Value="{Binding ElementName=infoCard,Path=Amount}" SelectionEnd="{Binding ElementName=slider,Path=Value}"/>
         

        </StackPanel>
        
    </Border>
</UserControl>

